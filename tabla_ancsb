<script>
    document.addEventListener('DOMContentLoaded', () => {
        const rows = document.querySelectorAll('#tabla-calculos tbody tr:not(.total-row)');
        let total = 0;

        rows.forEach(row => {
            const amountCell = row.cells[1];
            const conceptCell = row.cells[0];

            // Verifica si el concepto contiene la palabra ENERO
            if (conceptCell.textContent.includes('ENERO')) {
                conceptCell.classList.add('highlight-orange'); // Aplica el color naranja al concepto
                amountCell.classList.add('highlight-orange');  // Aplica el color naranja al importe
            }
            
            // Verifica si el concepto contiene la palabra Lefties
            if (conceptCell.textContent.includes('Lefties')) {
                conceptCell.classList.add('highlight-white'); // Aplica el color verde al concepto
                amountCell.classList.add('highlight-white');  // Aplica el color verde al importe
            }

            if (amountCell) {
                const amountText = amountCell.textContent.trim();
                const amount = parseFloat(amountText.replace(' €', '').replace(',', '.'));
                if (!isNaN(amount)) {
                    total += amount;
                }
            }
        });

        document.getElementById('total-a-pagar').textContent = `${total.toFixed(2).replace('.', ',')} €`;

        ordenarPorImporte(); // Llama a la función de ordenamiento automáticamente al cargar
    });

    function ordenarPorImporte() {
        const tbody = document.querySelector('#tabla-calculos tbody');
        const rowsArray = Array.from(tbody.querySelectorAll('tr:not(.total-row)'));

        rowsArray.sort((a, b) => {
            const importeA = parseFloat(a.cells[1].textContent.replace(' €', '').replace(',', '.')) || 0;
            const importeB = parseFloat(b.cells[1].textContent.replace(' €', '').replace(',', '.')) || 0;
            return importeB - importeA; // Orden descendente
        });

        rowsArray.forEach(row => tbody.appendChild(row));
    }
</script>
            
